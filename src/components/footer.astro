---
import Container from "@components/container.astro";
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
import emblem from "@assets/emblem.svg";

const { margin } = Astro.props;

const footermenu = {
  company: [
    {
      title: "About Us",
      path: "/about-us",
    },
  ],
  services: [
    {
      title: "How We Help",
      path: "/how-we-help",
    },
    {
      title: "Who We Help",
      path: "/who-we-help",
    },
    {
      title: "Financial Operations Review",
      path: "/financial-operations-review",
    },
  ],
};
---

<footer
  class:list={[
    "py-14 bg-surface-secondary border-t border-border-light",
    margin && "mt-10",
  ]}>
  <Container>
    <div class="grid sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-8">
      <div class="sm:col-span-2 md:col-span-3 lg:col-span-2">
        <a href="/" class="flex items-center gap-2">
          <Image src={emblem} alt="" class="h-10 w-10" />
          <span class="text-lg">
            <span class="font-bold text-brand-navy">The Financial</span>
            <span class="text-brand-gold-text font-bold"> Helm</span>
          </span>
        </a>
        <p class="mt-4 text-sm text-content-secondary max-w-xs">
          Architects of your financial engine. We design and manage the robust systems that stop your finances from dictating your potential.
        </p>
      </div>
      <div>
        <h3 class="font-medium text-sm text-content-primary">Company</h3>
        <div class="flex flex-col mt-3">
          {
            footermenu.company.map((item) => (
              <a
                href={item.path || "#"}
                class="py-2 text-sm text-content-secondary hover:text-brand-gold-text">
                {item.title}
              </a>
            ))
          }
        </div>
      </div>
      <div>
        <h3 class="font-medium text-sm text-content-primary">Services</h3>
        <div class="flex flex-col mt-3">
          {
            footermenu.services.map((item) => (
              <a
                href={item.path || "#"}
                class="py-2 text-sm text-content-secondary hover:text-brand-gold-text">
                {item.title}
              </a>
            ))
          }
        </div>
      </div>
    </div>
  </Container>

  <div class="mt-14 pt-8 px-5 border-t border-border-light">
    <Container>
      <p class="text-center text-sm text-content-secondary [text-wrap:balance]">
        Copyright © {new Date().getFullYear()} The Number Ninjas Ltd t/a The Financial Helm
      </p>
      <p class="text-center text-sm text-content-secondary [text-wrap:balance]">
        Registered in England and Wales, company number 10935726
      </p>
      <p class="text-center text-sm text-content-secondary [text-wrap:balance]">
        Registered office: The Number Ninjas Ltd, 3rd Floor, 86-90 Paul Street, London, EC2A 4NE
      </p>
      <p class="text-center text-xs text-content-secondary mt-2">
        <a href="/cookie-policy" class="hover:text-brand-gold-text"> Cookie policy</a> ・ <a
          href="/privacy-policy"
          class="hover:text-brand-gold-text">
          Privacy policy</a
        >
      </p>
    </Container>
  </div>
</footer>
