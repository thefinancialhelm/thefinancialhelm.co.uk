---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import {
  Slack,
  Zapier,
  Intercom,
  Shopify,
  Messenger,
  Discord,
} from "@components/ui/icons";

const integrations = [
  {
    name: "Slack",
    description:
      "Get notified in your Slack channels when a new order is placed.",
    Icon: Slack,
    link: "#",
  },

  {
    name: "Zapier",
    description:
      "Connect over 200+ tools with our easy to use Zapier integrations.",
    Icon: Zapier,
    link: "#",
  },

  {
    name: "Intercom",
    description:
      "Send order updates and emails to your customers via Intercom.",
    Icon: Intercom,
    link: "#",
  },

  {
    name: "Shopify",
    description:
      "Create orders and customers in Shopify when a new order is placed.",
    Icon: Shopify,
    link: "#",
  },

  {
    name: "Messenger",
    description: "Notify your Facebook Messenger when a new order is placed.",
    Icon: Messenger,
    link: "#",
  },

  {
    name: "Discord",
    description: "Notify your Discord server when a new order is placed.",
    Icon: Discord,
    link: "#",
  },
];
---

<Layout title="Integrations">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Integrations</Fragment>
      <Fragment slot="desc">
        Connect over 200+ tools with our easy to use integrations.
      </Fragment>
    </Sectionhead>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 my-24 gap-x-10 gap-y-24">
      {
        integrations.map((item) => (
          <div class="rounded-2xl relative flex items-center flex-col p-6 group bg-surface-primary transition ring-2 ring-border-light shadow hover:ring-border-interactive hover:shadow-md">
            <div class="ring-2 ring-border-light w-16 h-16 group-hover:ring-border-interactive transition shadow shadow-surface-secondary rounded-lg grid place-items-center -mt-16 bg-surface-primary">
              <item.Icon class="w-8 h-8" />
            </div>

            <h3 class="text-xl lg:text-2xl font-medium mt-4 text-content-primary">{item.name}</h3>
            <p class="text-content-secondary mt-2 text-center [text-wrap:balance]">
              {item.description}
            </p>

            <div class="mt-3">
              <a
                href={item.link || "#"}
                class="text-sm px-2 transition py-1 text-interactive-primary hover:text-interactive-primary-hover focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-interactive-primary focus-visible:outline-none rounded-full">
                View Integration
                <span class="absolute inset-0" />
              </a>
            </div>
          </div>
        ))
      }
    </div>
  </Container>
</Layout>
