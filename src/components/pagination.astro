---
const { url } = Astro.props;
---

<div class="flex justify-center items-center mt-10 gap-4">
  {
    url.prev && (
      <a
        class="bg-surface-secondary px-5 py-2 rounded-md hover:bg-surface-tertiary transition"
        href={url.prev}
        title="Go to Previous">
        &larr; Prev
      </a>
    )
  }
  {
    url.next && (
      <a
        class="bg-surface-secondary px-5 py-2 rounded-md hover:bg-surface-tertiary transition"
        href={url.next}
        title="Go to Next">
        Next &rarr;
      </a>
    )
  }
</div>
