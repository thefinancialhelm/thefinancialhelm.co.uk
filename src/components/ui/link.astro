---
interface Props {
  href: string;
  size?: "md" | "lg" | "sm";
  block?: boolean;
  style?: "outline" | "primary" | "inverted" | "muted";
  class?: string;
  [x: string]: any;
}

const {
  href,
  block,
  size = "lg",
  style = "primary",
  class: className,
  ...rest
} = Astro.props;

const sizes = {
  lg: "px-7 py-2.5",
  md: "px-5 py-2",
  sm: "px-4 py-2 text-sm",
  xl: "px-8 py-4 text-lg",
};

const styles = {
  outline: "border-2 border-brand-gold-text hover:bg-surface-secondary text-brand-gold-text",
  primary: "bg-interactive-primary text-content-inverse hover:bg-interactive-primary-hover",
  inverted: "bg-surface-primary text-content-primary border-2 border-transparent",
  muted: "bg-surface-secondary hover:bg-surface-tertiary border-2 border-transparent text-content-secondary",
};
---

<a
  href={href}
  {...rest}
  class:list={[
    "rounded-full text-center transition focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-brand-gold-text focus-visible:outline-none",
    block && "w-full",
    sizes[size],
    styles[style],
    className,
  ]}
  ><slot />
</a>
